@* Not the best way to get the model *@
@inherits UmbracoViewPage<List<FeaturedItem>>
@using FionaWhitfieldArt.Models

<div id="fh5co-featured-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @RenderFeaturedItem(@Model[0], null)
            </div>
            <div class="col-md-6">
                @RenderFeaturedItem(@Model[1], "featured-grid-2")
                <div class="row">
                    <div class="col-md-6">
                        @RenderFeaturedItem(@Model[2], "featured-grid-2")
                    </div>
                    <div class="col-md-6">
                        @RenderFeaturedItem(@Model[3], "featured-grid-2")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@helper RenderFeaturedItem(FeaturedItem item,string extraClass)
{

        <a href="@item.LinkUrl" class="featured-grid @extraClass" style="background-image: url('@item.ImageUrl');">
            <div class="desc">
                <h3>@item.Name</h3>
                <span>@item.Category</span>
            </div>
        </a>

}